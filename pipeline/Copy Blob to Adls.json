{
	"name": "Copy Blob to Adls",
	"properties": {
		"activities": [
			{
				"name": "Copy data",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['id']"
								},
								"sink": {
									"name": "id"
								}
							},
							{
								"source": {
									"path": "$['name']"
								},
								"sink": {
									"name": "name"
								}
							},
							{
								"source": {
									"path": "$['details']['age']"
								},
								"sink": {
									"name": "age"
								}
							},
							{
								"source": {
									"path": "$['details']['address']['city']"
								},
								"sink": {
									"name": "city"
								}
							},
							{
								"source": {
									"path": "$['details']['address']['state']"
								},
								"sink": {
									"name": "state"
								}
							},
							{
								"source": {
									"path": "$['details']['contacts'][0]['type']"
								},
								"sink": {
									"name": "type"
								}
							},
							{
								"source": {
									"path": "$['details']['contacts'][0]['value']"
								},
								"sink": {
									"name": "value"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "Source_json",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "CSV_output",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}